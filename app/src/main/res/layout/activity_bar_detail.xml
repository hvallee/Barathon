<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BarDetail"
    android:background="@mipmap/wood_background">

    <TextView android:text="Nom bar" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NomBarDetail"
        android:background="@mipmap/sign"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView android:text="Adresse bar" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdresseBarDetail"
        android:background="@mipmap/sign"
        android:layout_below="@+id/NomBarDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20dp" />
    <TextView android:text="Num tel" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumBarDetail"
        android:background="@mipmap/sign"
        android:layout_below="@+id/AdresseBarDetail"
        android:layout_alignLeft="@+id/AdresseBarDetail"
        android:layout_alignStart="@+id/AdresseBarDetail"
        android:layout_marginTop="41dp"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
