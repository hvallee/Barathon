<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/wood_background"
    android:weightSum="1">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/logo_barathon"
        android:layout_weight="0.22" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27"></FrameLayout>

    <Button
        android:layout_width="225dp"
        android:layout_height="80dp"
        android:text="Bars"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/wood_button"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="showList"
        android:textColor="#1e0606" />

    <Button
        android:layout_width="225dp"
        android:layout_height="80dp"
        android:text="Barathons"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/wood_button"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#1e0606"
        android:onClick="showListParcours"/>

</LinearLayout>
