<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hvallee.barathon.CreateParcours"
    android:background="@mipmap/wood_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="@string/create_parcours"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/scroll"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_new_parcours"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:paddingTop="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name_new_parcours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_new_parcours"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/desc_new_parcours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/button_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_create_parcours"/>


</LinearLayout>
